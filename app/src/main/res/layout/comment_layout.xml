<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="asay.asaymobile.BillActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="1000dp"
        android:autoSizeMinTextSize="20dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="none"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:singleLine="false"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameView"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/reply"
        android:layout_width="103dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:drawableLeft="@drawable/cornerdownleft"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:text="Reply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <Button
        android:id="@+id/report"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/flag"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:text="Report"
        app:layout_constraintLeft_toRightOf="@+id/reply"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <Button
        android:id="@+id/up"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="72dp"
        android:drawableLeft="@drawable/arrowup"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/report"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <Button
        android:id="@+id/down"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@drawable/arrowdown"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/up"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

</android.support.constraint.ConstraintLayout>